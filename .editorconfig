# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true


# Defaults
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = tab
indent_size = 2


# Python (includes isort configuration)
[*.py]
indent_style = space
indent_size = 4
# isort
multi_line_output=3
line_length=79
indent=4
length_sort=false
include_trailing_comma=True
force_sort_within_sections=True
default_section=FIRSTPARTY


[*.{yaml, yml}]
indent_style = space
